<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/txtnombreArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#808080"
        android:textSize="14dp"
        tools:text="sdfghjklkjhg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtfechaArticulo"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginEnd="10dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@+id/btnNotificar_Articulo"
                android:textColor="#808080"
                android:text="holAAAA"
                android:textSize="12dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/btnNotificar_Articulo"
                android:layout_width="29dp"
                android:layout_height="37dp"
                android:layout_marginEnd="5dp"
                android:background="#00000000"
                android:elevation="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_notificar_no"
                android:tag="noti_no"
                android:textColor="#0E0E0E"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>