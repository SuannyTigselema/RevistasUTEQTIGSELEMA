<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="430dp"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgEdiPort"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:scaleType="centerCrop"
                android:src="@drawable/escudouteq" />



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp">

                    <RelativeLayout
                        android:id="@+id/relatx"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/imgEdiPort"
                        android:layout_marginEnd="0dp"
                        android:background="#A8090808">
                        <TextView
                            android:id="@+id/txtEdiTitulo"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Titulo"
                            android:textColor="#ffff"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblEdi1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtEdiTitulo"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:text="Doi: "
                            android:textColor="#ffff" />

                        <TextView
                            android:id="@+id/txtEdiDOI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtEdiTitulo"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/lblEdi1"
                            android:autoLink="all"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:linksClickable="true"
                            android:text="aqui va el doi "
                            android:textColor="#2196F3" />

                        <TextView
                            android:id="@+id/lblEdi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtEdiDOI"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:drawablePadding="10dp"
                            android:text="Publicado: "
                            android:textColor="#ffff" />

                        <TextView
                            android:id="@+id/txtEdiPublicado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtEdiDOI"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@+id/lblEdi2"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:text="Doi: "
                            android:textColor="#ffff" />

                    </RelativeLayout>
                </ScrollView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>





</RelativeLayout>